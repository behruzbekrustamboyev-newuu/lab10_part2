#include <iostream>
using namespace std;

char to_lower(const char s) {
    if (s >= 'A' && s <= 'Z')
        return s + ('a' - 'A');
    return s;
}

void countChar(const char* str, int& vowelCount, int& consonantCount) {
    vowelCount = 0;
    consonantCount = 0;

